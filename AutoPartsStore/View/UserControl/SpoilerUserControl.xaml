<UserControl x:Class="AutoPartsStore.View.SpoilerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoPartsStore.View"
             mc:Ignorable="d" 
                Name="spoilerWindow"
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <Grid x:Name="contentGrid" Visibility="Collapsed">
            <DockPanel>
                <Button Content="{Binding ButtonTextWhenShow, ElementName=spoilerWindow}" DockPanel.Dock="Top" Click="Spoiler_Click"/>
                <ContentControl Content="{Binding SpoilerContent, ElementName=spoilerWindow}" DockPanel.Dock="Bottom"/>
            </DockPanel>
        </Grid>
        <Grid x:Name="spoilerGrid" Visibility="Visible">
            <DockPanel>
                <Button Content="{Binding ButtonTextWhenHide, ElementName=spoilerWindow}" Click="Spoiler_Click"/>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>
