<Window x:Class="AutoPartsStore.View.Category.RenameCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoPartsStore.View.Category"
        mc:Ignorable="d"
        Title="RenameCategoryWindow" Height="450" Width="800">
    <Grid DataContext="{Binding Source={StaticResource NewCategoryViewModel}}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--'{DynamicResource NewCategoryTipLabel}"-->
            <TextBlock  Text="{Binding Path=CategoriesViewModel.NewCategory.ParentCategory.Name, StringFormat=Добавить категорию в {0}}"/>
            <TextBox Name="passwordBox" Grid.Row="1" MinWidth="250" Text="{Binding Path=CategoriesViewModel.NewCategory.Name}"/>
            <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button IsDefault="True"  MinWidth="60" Margin="0,0,10,0" Command="{Binding CategoriesViewModel.AddCategoryCommand}">Добавить</Button>
            </WrapPanel>

        </Grid>
    </Grid>
</Window>
