<Page x:Class="AutoPartsStore.View.Category.EditCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoPartsStore.View.Category"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditCategoryPage">

    <Grid>
        <Grid DataContext="{Binding Source={StaticResource EditCategoryViewModel}}" 
              Background="{DynamicResource SecondItemBackGround}">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{DynamicResource EditCategoryTitleLableText}"/>
                </Grid>
                <StackPanel Margin="30">
                    <TextBlock Text="{Binding Category}"/>
                    
                </StackPanel>
                
            </StackPanel>
        </Grid>
    </Grid>
</Page>
