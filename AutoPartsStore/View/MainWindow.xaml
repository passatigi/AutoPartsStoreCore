            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="13*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="161*"/>
                    <ColumnDefinition Width="610*"/>
                    <ColumnDefinition Width="54*"/>
                    <ColumnDefinition Width="54*"/>
                    <ColumnDefinition Width="54*"/>
                    <ColumnDefinition Width="54*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Margin="0,0,8,0">
                    <Button Content="{StaticResource logoImage}" Background="Transparent" BorderThickness="0"></Button>
                </Border>
                <Border VerticalAlignment="Center" Grid.Column="1" Margin="70,0,50,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding SearchString}" Style="{DynamicResource searchTextBox}" FontSize="12"/>
                        <Button 
                              Command="{Binding SearchCommand}"
                             CommandParameter="orders"
                            Grid.Column="1" Style="{DynamicResource standartButton}" FontSize="12" Content="Найти"></Button>
                    </Grid>
                </Border>
                <Border Grid.Column="2" Background="Transparent" HorizontalAlignment="Center">
                    <Button 
                            Command="{Binding OpenWindowCommand}"
                             CommandParameter="shoppingCart"                        
                        Content="{StaticResource cartImage}"
                            Style="{DynamicResource imgButton}" Cursor="Hand"></Button>
                </Border>
                <Border Grid.Column="3" HorizontalAlignment="Center">
                    <Button 
                        Command="{Binding OpenWindowCommand}"
                             CommandParameter="orders"
                        Content="{StaticResource ordersImage}" Style="{DynamicResource imgButton}" Cursor="Hand"></Button>
                </Border>
                <Border Grid.Column="4" Background="Transparent">
                    <Button Command="{Binding OpenWindowCommand}"
                             CommandParameter="User" Content="{StaticResource userImage}"
                            Style="{DynamicResource imgButton}">
                    </Button>

                </Border>
                <Border Grid.Column="5" Background="Transparent">
                    <Button Command="{Binding OpenWindowCommand}"
                             CommandParameter="FirstPage"
                            Content="{StaticResource homeImage}"
                             Style="{DynamicResource imgButton}"/>

                </Border>
            </Grid>
        </Grid>
        <Frame Grid.Row="1" x:Name="MainFrame"/>
