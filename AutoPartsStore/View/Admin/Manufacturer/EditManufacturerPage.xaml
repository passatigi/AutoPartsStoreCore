<Page x:Class="AutoPartsStore.View.Admin.Manufacturer.EditManufacturerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoPartsStore.View.Admin.Manufacturer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditManufacturerPage">

    <Grid>
        <Grid DataContext="{Binding Source={StaticResource AddManufacturerViewModel}}">
            <StackPanel>
                <TextBox Text="{Binding Manufacturer.Name}"/>
                <StackPanel>
                    <Image Name="ProductImage" Source="{Binding Manufacturer.Image, Mode=TwoWay}" MaxHeight="150"/>
                    <Button Height="23" Name="BrowseButton" Click="BrowseButton_Click" Content="{DynamicResource AddImageButtonText}"/>
                </StackPanel>
                <TextBox Text="{Binding Manufacturer.Description}"/>
                <Button Height="23" Command="{Binding AddManufacturerCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
