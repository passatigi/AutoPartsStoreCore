        <Border Background="{DynamicResource SecondItemBackGround}" Margin="0 10 0 10">
            <Border.Effect>
                <DropShadowEffect Opacity="0.2" ShadowDepth="0" BlurRadius="20"></DropShadowEffect>
            </Border.Effect>

            <Grid Height="50" DataContext="{Binding Source={StaticResource AddEntityPanelViewModel}}" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>
                <Button  Command="{Binding AddIntoCategoryCommand}"
                                        CommandParameter="1"
                                    Grid.Column="0" Margin="5, 5, 0, 5" Content="{DynamicResource NewCategoryButtonText}" 
                                    Style="{DynamicResource ButtonStyleSelectProductCount}"></Button>
                <Button x:Name="AddCarButton"
