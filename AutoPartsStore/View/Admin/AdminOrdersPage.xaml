<Page x:Class="AutoPartsStore.View.Admin.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoPartsStore.View.Admin"
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrdersPage">

    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140*"/>
                <ColumnDefinition Width="550*"/>
                <ColumnDefinition Width="102*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" Background="{DynamicResource SecondItemBackGround}" DataContext="{Binding Source={StaticResource AdminOrdersViewModel}}">
                <Border Margin="0,50,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Список заказов"  Style="{DynamicResource titleText}"/>
                        <Border Grid.Column="1" Margin="5">
                            <Button Command="{Binding UpdateOrdersCommand}"
                            Style="{DynamicResource smallButton}" FontSize="12" Height="30"
                            >Обновить</Button>
                        </Border>
                    </Grid>
                </Border>
                <ItemsControl ItemsSource="{Binding Orders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Border>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Заказ " FontSize="20" Margin="5" Style="{DynamicResource mainText}" FontStyle="Italic"/>
                                            <TextBlock Text="{Binding Id}" FontSize="20" Margin="5" Style="{DynamicResource mainText}" FontStyle="Italic"/>
                                            <TextBlock Text="{Binding DateTime}" FontSize="20" Margin="5" Style="{DynamicResource mainText}" FontStyle="Italic"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel.Style>
                                                <Style TargetType="{x:Type StackPanel}">
                                                    <Setter Property="Background" Value="white"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="В обработке">
                                                            <Setter Property="Background" Value="Gray"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Подтвержден">
                                                            <Setter Property="Background" Value="Green"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Выполнен">
                                                            <Setter Property="Background" Value="Green"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Отклонен">
                                                            <Setter Property="Background" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <TextBlock Text="Статус заказа: " Style="{DynamicResource mainText}" Margin="5"/>
                                            <TextBlock Text="{Binding Status}" Style="{DynamicResource mainText}" Margin="5"/>
                                        </StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Margin="5">
                                                <Button Content="Подтвердить заказ" Style="{DynamicResource smallButton}"
                                                             Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}, Path=DataContext.ConfirmOrderCommand}"
                                                                    CommandParameter="{Binding Id}"
                                                            />
                                            </Border>
                                            <Border Grid.Column="1" Margin="5">
                                                <Button Content="Отклонить заказ" Style="{DynamicResource smallButton}"
                                                             Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}, Path=DataContext.RevokeOrderCommand}"
                                                                    CommandParameter="{Binding Id}"
                                                            />
                                            </Border>
                                            <Border Grid.Column="2" Margin="5">
                                                <Button Content="Оповестить о выполнении" Style="{DynamicResource smallButton}"
                                                             Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}, Path=DataContext.NotifyDoneOrderCommand}"
                                                                    CommandParameter="{Binding Id}"
                                                            />
                                            </Border>
                                            <Border Grid.Column="3" Margin="5">
                                                <Button Content="Заказ принят клиентом" Style="{DynamicResource smallButton}"
                                                             Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}, Path=DataContext.NotifyOrderPickedCommand}"
                                                                    CommandParameter="{Binding Id}"
                                                            />
                                            </Border>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                <StackPanel>
                                    <Border>
                                        <Grid Background="{DynamicResource ItemBackGround}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.3*"/>
                                                <ColumnDefinition Width="0.7*"/>
                                                <ColumnDefinition Width="0.6*"/>
                                                <ColumnDefinition Width="0.4*"/>
                                                <ColumnDefinition Width="0.4*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Margin="5" Grid.Column="0">
                                                <TextBlock Text="Фото" HorizontalAlignment="Left" Style="{DynamicResource secondaryText}"/>
                                            </Border>
                                            <Border Margin="5" Grid.Column="1">
                                                <TextBlock Text="Название" HorizontalAlignment="Center" Style="{DynamicResource secondaryText}"/>
                                            </Border>
                                            <Border Margin="5" Grid.Column="2">
                                                <TextBlock Text="Количество" HorizontalAlignment="Center" Style="{DynamicResource secondaryText}"/>
                                            </Border>
                                            <Border Margin="5" Grid.Column="3">
                                                <TextBlock Text="Цена" HorizontalAlignment="Center" Style="{DynamicResource secondaryText}"/>
                                            </Border>
                                            <Border Margin="5" Grid.Column="4">
                                                <TextBlock Text="Итого" HorizontalAlignment="Right" Style="{DynamicResource secondaryText}"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                    <ItemsControl ItemsSource="{Binding OrderParts}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{DynamicResource border}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="0.3*"/>
                                                            <ColumnDefinition Width="0.7*"/>
                                                            <ColumnDefinition Width="0.6*"/>
                                                            <ColumnDefinition Width="0.4*"/>
                                                            <ColumnDefinition Width="0.4*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Border Margin="5" Grid.Column="0" HorizontalAlignment="Left">
                                                            <Image Grid.Row="2" Width="30" Height="30" Source="{Binding Product.Image}"></Image>
                                                        </Border>
                                                        <Border Margin="5" Grid.Column="1">
                                                            <StackPanel>
                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                                    <TextBlock Style="{DynamicResource secondaryText}" Margin="2" Text="{Binding Product.Manufacturer.Name}"/>
                                                                    <TextBlock Style="{DynamicResource secondaryText}" Margin="2" Text="{Binding Product.VendorCode}"/>
                                                                </StackPanel>
                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                                    <TextBlock Style="{DynamicResource secondaryText}" Margin="2" Text="{Binding Product.Category.Name}"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </Border>
                                                        <Border Margin="5" Grid.Column="2">
                                                            <Grid >
                                                                <TextBlock Grid.Row="1" Style="{DynamicResource secondaryText}"  Text="{Binding Path=ProductCount}" HorizontalAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                        <Border Margin="5" Grid.Column="3">
                                                            <Grid >
                                                                <TextBlock Grid.Row="1" Style="{DynamicResource secondaryText}"  Text="{Binding Path=Product.Price, StringFormat={}{0} р.}" HorizontalAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                        <Border Margin="5" Grid.Column="4" HorizontalAlignment="Right">
                                                            <Grid >
                                                                <TextBlock Grid.Row="1" Style="{DynamicResource secondaryText}"  Text="{Binding Path=TotalPrice, StringFormat={}{0} р.}" HorizontalAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <Border>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Margin="5" FontSize="20" Style="{DynamicResource secondaryText}" Text="Итого: "/>
                                            <TextBlock Margin="5" FontSize="20" Style="{DynamicResource secondaryText}" Text="{Binding TotalPrice}"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
