<Window x:Class="AutoPartsStore.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoPartsStore"
        mc:Ignorable="d"
        Title="Окно оповещения" MaxHeight="300" Height="209" MaxWidth="400" Width="399" WindowStartupLocation="CenterScreen" Background="#EBEBEB" ResizeMode="NoResize">
    <Grid>
        <TextBlock Name="notificationText" Style="{DynamicResource mainText}" TextWrapping="Wrap" Margin="20,40,0,0" VerticalAlignment="Top">Текст уведомления</TextBlock>
        <Button VerticalAlignment="Bottom" Click="closeWindow_Click" Height="30" Width="170" Style="{DynamicResource standartButton}" HorizontalAlignment="Right" Margin="0,0,10,10" >OK</Button>
    </Grid>
</Window>
